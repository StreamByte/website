---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<title>{title}</title>

		<!-- Fuentes tipogrÃ¡ficas -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

	</head>
	<body>
		<div class="bg-animation">
			<div class="main blob"></div>
			<div class="second blob" />
			<div class="third blob" />
		</div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	.bg-animation {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		z-index: -2;
		width: 500px;
		height: 500px;
		position: absolute;
		top: 120px;
		left: 360px;
		filter: blur(72px);
		opacity: 0.4;
	}

	.blob {
		width: 300px;
		border-radius: 100px;
	}

	.main {
		background-color: var(--primary-500);
		position: absolute;
		top: 200px;
		left: 100px;
		width: 200px;
		height: 240px;
		
		animation: main 8s infinite ease;
		}

	.second {
		background-color: var(--primary-500);
		position: absolute;
		top: 80px;
		right: -20px;
		width: 320px;
		height: 200px;
		
		animation: second 8s infinite ease;
	}

	.third {
		background-color: var(--primary-500);
		position: absolute;
		right: 0;
		top: 300px;
		width: 200px;
		height: 250px;
		
		animation: third 8s infinite linear;
	}

	@keyframes main {
		0% {top: 200px; left: 100px; transform: scale(1);}
		30% {top: 300px; left: 150px; transform: scale(1.4);}
		60% {top: 100px; left: 200px; transform: scale(1.3);}
		100% {top: 200px; left: 100px; transform: scale(1);}
	}

	@keyframes second {
		0% {top: 80px; right: -20px; transform: scale(1.2);}
		30% {top: 300px; right: -20px;transform: scale(1);}
		60% {top: 200px; right: 100px;transform: scale(1);}
		100% {top: 120px; right: -20px; transform: scale(1.4);}
	}

	@keyframes third {
		0% {top: 250px; right: 0px; transform: scale(1);}
		30% {top: 150px; right: 150px;transform: scale(1.4);}
		60% {top: 250px; right: 100px;transform: scale(1);}
		100% {top: 250px; right: 0px; transform: scale(1);}
	}

</style>
