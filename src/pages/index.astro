---
import CardSlider from '../components/CardSlider.astro';
import CommunityComponent from '../components/CommunityComponent.astro';
import ContactForm from '../components/ContactForm.astro';
import ButtonDiscord from '../components/ButtonDiscord.astro'
import InstructionBento from '../components/InstructionBento.astro';
import Layout from '../layouts/Layout.astro';
import ButtonYouTube from '../components/ButtonYouTube.astro'
import ButtonCoffee from '../components/ButtonCoffee.astro'

import '../styles/main.css'
---

<Layout title="StreamByte ⚡ - Aprende y mejora tus habilidades en Front-End con retos reales y profesionales">
	<main>
		<section class="hero-section">
			<h1 class="hero-display-text">
				Retos Frontend diseñados a medida
			</h1>
			<div class="cta-section">
				<img src="/assets/images/process-preview-windows.png" alt="Captura de proceso | Diseño de hero" />
				<div class="hero-cta">
					<h2 class="cta-title">
						¿Qué Hacemos?
					</h2>
					<p class="description">
						StreamByte es una página de retos de programación enfocados al Front-End. Mejora tus habilidades, aprende nuevas tecnologías, añade a tu portafolio y comparte tu progreso con la comunidad.
					</p>
					<div class="button-group">
						<ButtonDiscord>Comunidad</ButtonDiscord>
						<ButtonYouTube>Último video</ButtonYouTube>
						<ButtonCoffee>Apoya al proyecto</ButtonCoffee>
					</div>
				</div>
			</div>
		</section>

		<section class="favorite-challenges" id="retos">
			<div>
				<h2 class="main-title">
					Retos Seleccionados
				</h2>
				<ul class="challenge-slider">
					<CardSlider />
				</ul>
			</div>
		</section>

		<section class="instruction-bento">
			<h2 class="main-title">
				instrucciones
			</h2>
			<InstructionBento />
		</section>

		<section class="community-cta">
			<CommunityComponent />
		</section>

		<section class="contact-cta" id="contacto">
			<ContactForm />
		</section>
	</main>
</Layout>

<style is:global>
	.hero-section {
		padding: 0 100px;
		display: block;
		margin-top: 100px;
	}

	.hero-display-text {
		font-family: var(--font-primary);
		font-size: var(--font-display-2);
		font-weight: var(--font-black);
		color: var(--shades-black);
		font-style: italic;
		line-height: 96px;
		text-transform: uppercase;
		text-align: center;
		margin-bottom: 100px;
	}

	.cta-section {
		display: flex;
		justify-content: center;
		gap: 24px;
		margin-bottom: 100px;
	}

	.hero-cta {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.cta-title {
		font-family: var(--font-primary);
		font-size: var(--font-6xl);
		font-weight: var(--font-bold);
		color: var(--shades-black);
		font-style: normal;
		line-height: 48px;
		margin-bottom: 12px;
	}

	.description {
		font-family: var(--font-secondary);
		font-size: var(--font-md);
		font-weight: var(--font-medium);
		color: var(--shades-black);
		font-style: normal;
		max-width: 524px;
		margin-bottom: 24px;
	}

	.button-group {
		display: flex;
		gap: 12px;
	}
	
    .instruction-bento {
        margin-left: 100px;
        margin-right: 100px;
    }

	.community-cta {
		display: flex;
		margin: auto;
	}

	.contact-cta {
        display: flex;
		margin: auto;
        width: 1080px;
    }
</style>