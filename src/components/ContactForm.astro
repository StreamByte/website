    }

    .social-icons {
        display: flex;
        flex-direction: column;
        margin-top: 290px;
    }

    .icon-group {
        display: flex;
        list-style: none;
        gap: 14px;
    }

    .social-icon {
        transition: 120ms;
    }

    .social-icon:hover {
        scale: 1.2;
    }

    .contact-form {
        background-color: var(--shades-white);
        border: 2px solid var(--primary-900);
        padding: 24px 32px 45px 32px;
        width: 528px;
        height: 548px;
        border-radius: 20px;
        transition: 120ms;
    }

    .contact-form:hover {
        transform: translate(-6px, -6px);
        box-shadow: 6px 6px var(--primary-900);
        background-color: var(--primary-50);
    }

    .form-title {
        font-family: var(--font-primary);
        font-size: var(--font-4xl);
        font-weight: var(--font-bold);
        margin-bottom: 24px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 22px;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: 0;
        overflow: hidden;
        white-space: nowrap;
        border: 0;
    }

    label {
        font-family: var(--font-primary);
        font-size: var(--font-md);
    }
    
    input[type="text"],
    input[type="email"],
    textarea {
        padding: 10px 0px 10px 4px;
        background-color: transparent;
        border: none;
        border-bottom: 2px solid var(--primary-900);
    }
    
    input[type="text"]::focus,
    input[type="email"]::focus,
    textarea {
        background-color: transparent;
        border: none;
        border-bottom: 2px solid var(--primary-900);
    }
    
    input::placeholder, textarea::placeholder {
        font-family: var(--font-primary);
        font-size: var(--font-base);
        font-weight: var(--font-semibold);
        color: var(--shades-black);
    }
    
    input::placeholder {
        padding: 10px 0;
    }

    .check-title {
        font-family: var(--font-primary);
        font-size: var(--font-md);
        font-weight: var(--font-semibold);
    }

    .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .check-group {
        display: flex;
        gap: 8px;
    }

    .checkbox {
        appearance: none;
        -webkit-appearance: none;
        border: 2px solid var(--shades-black);
        border-radius: 2px;
        width: 20px;
        height: 20px;
        box-shadow: 1px 1px 0 var(--shades-black);
    }

    .btn {
        font-family: var(--font-prmiary);
        font-size: var(--font-md);
        font-weight: var(--font-medium);
        background-color: var(--shades-white);
