        font-size: var(--font-paragraph-1);
        font-weight: var(--font-medium);
        margin-bottom: 8px;
    }

    .social-icons {
        display: flex;
        flex-direction: column;
        margin-top: 290px;
    }

    .icon-group {
        display: flex;
        list-style: none;
        gap: 14px;
    }

    .social-icon {
        transition: 120ms;
    }

    .social-icon:hover {
        scale: 1.2;
    }

    .contact-form {
        padding: 24px 32px 45px 32px;
        width: 528px;
        height: 548px;
        background-color: var(--primary-400);
        border-radius: 20px;
    }

    .form-title {
        font-family: var(--font-family-primary);
        font-size: var(--font-heading-3);
        font-weight: var(--font-bold);
        margin-bottom: 24px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 22px;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: 0;
        overflow: hidden;
        white-space: nowrap;
        border: 0;
    }

    label {
        font-family: var(--font-family-secondary);
        font-size: var(--font-heading-6);
    }
    
    input[type="text"],
    input[type="email"],
    textarea {
        padding: 10px 0px 10px 4px;
        background-color: transparent;
        border: none;
        border-bottom: 2px solid var(--primary-900);
    }
    
    input[type="text"]::focus,
    input[type="email"]::focus {
        background-color: transparent;
        border: none;
        border-bottom: 2px solid var(--primary-900);
    }
    
    input::placeholder, textarea::placeholder {
        font-family: var(--font-family-secondary);
        font-size: var(--font-paragraph-1);
        font-weight: var(--font-semibold);
        color: var(--shades-black);
    }
    
    input::placeholder {
        padding: 10px 0;
    }

    .check-title {
        font-family: var(--font-family-secondary);
        font-size: var(--font-paragraph-1);
        font-weight: var(--font-bold);
    }

    .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .check-group {
        display: flex;
        gap: 8px;
    }

    .checkbox {
        appearance: none;
        -webkit-appearance: none;
        border: 2px solid var(--shades-black);
        border-radius: 2px;
        width: 20px;
        height: 20px;
        box-shadow: 1px 1px 0 var(--shades-black);
    }

    .btn {
        padding: 8px 14px;
        border: 2px solid var(--primary-900);
        border-radius: 8px;
        font-family: var(--font-family-primary);
        font-size: var(--font-heading-6);
        font-weight: var(--font-medium);
        transition: 120ms;
        background-color: var(--shades-white);
        z-index: 1;
    }

    .btn:hover {
        transform: translate(8px, 8px);
        box-shadow: 8px 8px 0 var(--primary-900);
        transform: translate(-4px, -4px);
    }
</style>