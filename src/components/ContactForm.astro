<style is:global>
    .section-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 100px;
        gap: 90px;
    }

    .contact-container {
        width: 462px;
        height: 548px;
    }

    .contact-description {
        font-family: var(--font-family-secondary);
		font-size: var(--font-heading-6);
		font-weight: var(--font-medium);
		font-style: normal;
